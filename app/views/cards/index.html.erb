<p id="notice"><%= notice %></p>

<h1>Rolodex</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Company</th>
      <th>Phone</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.first_name %></td>
        <td><%= card.last_name %></td>
        <td><%= card.company %></td>
        <td><%= card.phone %></td>
        <td><%= card.address1 %></td>
        <td><%= card.address2 %></td>
        <td><%= card.city %></td>
        <td><%= card.state %></td>
        <td><%= card.zip %></td>
        <td><%= card.email %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

